<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_width="wrap_content"
        app:cardElevation="@dimen/card_elevation_mbasket"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/inflate_change_time_slot_img_select"
                android:paddingRight="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_medium_14_hex258430"
                android:background="@drawable/ms_checkbox_img_inactive" />

            <TextView
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inflate_change_time_slot_tv_start_end_time"
                style="@style/font_medium_14_black"
                tools:text="9am - 12pm" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>