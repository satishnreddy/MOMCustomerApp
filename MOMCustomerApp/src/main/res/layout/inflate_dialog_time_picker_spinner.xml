<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:background="@drawable/rect_filled_ffffff_corner_aaaaaa_3dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/general_use_from"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:padding="@dimen/padding_normal"
        android:background="@color/color_413D3D"
        style="@style/font_medium_14_white"/>

    <TimePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/general_use_set"
        android:gravity="center"
        android:id="@+id/tv_submit"
        android:padding="@dimen/padding_normal"
        android:background="@color/color_70BB41"
        style="@style/font_medium_14_white"/>

</LinearLayout>