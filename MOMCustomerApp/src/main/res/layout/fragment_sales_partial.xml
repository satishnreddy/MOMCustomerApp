<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/color_toolbar"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pending Item"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18dp"
            style="@style/ToolbarStyle"
            android:layout_marginLeft="20dp"
            android:background="@color/color_toolbar"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/view_bg_mbasket"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/layout_search"
            layout="@layout/layout_search" />

        <com.mom.momcustomerapp.customviews.EmptyRecyclerView
            tools:visibility="gone"
            android:paddingStart="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:paddingEnd="@dimen/padding_small"
            android:id="@+id/fragment_partial_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:scrollbars="none" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/empty_view"
            android:paddingTop="120dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            style="@style/font_regular_14_graphite"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="No Pending Orders Found"
            />

<!--        <TextView-->
<!--            android:id="@+id/empty_view"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:paddingTop="20dp"-->
<!--            android:layout_marginTop="80dp"-->
<!--            android:gravity="center"-->
<!--            tools:visibility="visible"-->
<!--            android:alpha="0.6"-->
<!--            android:visibility="gone"-->
<!--            style="@style/font_regular_14_graphite"-->
<!--            android:text="@string/no_orders_found" />-->

    </LinearLayout>

</RelativeLayout>