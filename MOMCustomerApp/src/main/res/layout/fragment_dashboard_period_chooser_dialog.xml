<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:blur="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/fragment_dashboard_period_chooser_dialog_imgbtn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/full_margin"
            android:background="@color/transparent"
            android:src="@drawable/ic_close_white_24dp" />

        <TextView
            android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_title"
            style="@style/font_light_18_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/full_margin"
            android:gravity="center"
            android:text="TIMELINE"
            android:textColor="@color/white" />

        <View
            android:id="@+id/seperator_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/fragment_dashboard_period_chooser_dialog_tv_title"
            android:layout_marginEnd="@dimen/full_margin"
            android:layout_marginLeft="@dimen/full_margin"
            android:layout_marginRight="@dimen/full_margin"
            android:layout_marginStart="@dimen/full_margin"
            android:background="@drawable/shape_line_separator" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/fragment_dashboard_period_chooser_dialog_imgbtn_close"
            android:layout_below="@id/seperator_line"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_today"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Today"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_yesterday"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Yesterday"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_last_7days"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Last 7 Days"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_last_30days"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Last 30 Days"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_this_month"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="This Month"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_last_month"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Last Month"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

                <TextView
                    android:id="@+id/fragment_dashboard_period_chooser_dialog_tv_custom"
                    style="@style/font_regular_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/full_margin"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/half_padding"
                    android:text="Custom Range"
                    android:textColor="@color/bg_text_selection_state_white_accent" />

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</FrameLayout>