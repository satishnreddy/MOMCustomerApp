<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/full_padding"
    android:paddingTop="32dp">

    <FrameLayout
        android:id="@+id/navigationview_header_layout_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin"
        android:layout_marginStart="@dimen/half_margin">

        <ImageView
            android:id="@+id/navigationview_header_iv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/transparent"
            android:contentDescription="@string/content_description"
            android:scaleType="center" />

        <TextView
            android:id="@+id/navigationview_header_tv_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/content_description"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/navigationview_header_layout_avatar"
        android:layout_toRightOf="@id/navigationview_header_layout_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigationview_header_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:paddingEnd="@dimen/half_padding"
            android:paddingLeft="@dimen/full_padding"
            android:paddingRight="@dimen/half_padding"
            android:paddingStart="@dimen/full_padding"
            android:text="Vender Name"
            android:textColor="@color/white_700"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navigationview_header_tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:layout_marginTop="@dimen/basic_margin"
            android:paddingEnd="@dimen/half_padding"
            android:paddingLeft="@dimen/full_padding"
            android:paddingRight="@dimen/half_padding"
            android:paddingStart="@dimen/full_padding"
            android:text="324/276 Juhu, Andheri West"
            android:textColor="@color/white_700"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>


</RelativeLayout>