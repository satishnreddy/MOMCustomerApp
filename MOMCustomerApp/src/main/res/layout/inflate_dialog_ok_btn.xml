<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_normal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_bg_border_green2dp_corner6dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inflate_dialog_title"
            android:gravity="center"
            style="@style/font_medium_30_hex258430"
            tools:text="Order has been edited."
            android:maxLines="6"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inflate_dialog_sub_title"
            style="@style/font_medium_14_hex258430"
            android:layout_marginTop="8dp"
            tools:text="Would you like to create a new order ?"
            android:maxLines="6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center"
            android:layout_height="wrap_content">
<!--
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/inflate_order_btn_left_tv"
                android:background="@drawable/rect_filled_corner_6dp_border_2dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center"
                android:padding="@dimen/padding_small"
                />-->


            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/rect_filled_corner_6dp_border_2dp"
                android:layout_height="wrap_content"
                android:id="@+id/inflate_dialog_single_btn"
                android:layout_margin="@dimen/margin_small"
                android:text="yes"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/font_medium_18_hex258430"

                android:padding="@dimen/padding_small"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout >