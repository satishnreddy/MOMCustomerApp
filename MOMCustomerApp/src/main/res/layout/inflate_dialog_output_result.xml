<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_gravity="center"
        android:background="@drawable/rect_filled_01b108_corner_6dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:padding="@dimen/padding_small"
            tools:src="@drawable/ic_close_24dp"
            android:id="@+id/inflate_order_status_icon"
            android:src="@drawable/ic_check_green_24dp"
            android:background="@drawable/shape_circle_white"
            android:layout_height="48dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:id="@+id/inflate_order_status_msg"
            style="@style/font_medium_18_white"
            android:layout_height="wrap_content"
            android:text="Order accepted"
            tools:text="Order declined"
            />

    </LinearLayout>

</LinearLayout>