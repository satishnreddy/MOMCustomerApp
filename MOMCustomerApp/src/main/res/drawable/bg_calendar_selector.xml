<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:drawable="@drawable/bg_calendar_selected" android:state_selected="true" />
    <item android:drawable="@drawable/bg_calendar_selected" android:state_pressed="true" />
    <item app:tsquare_state_current_month="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey400" />
        </shape>
    </item>
    <item android:drawable="@drawable/bg_calendar_today" app:tsquare_state_today="true" />
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
</selector>